{
  "name": "pikku-i18n",
  "version": "1.0.2",
  "description": "Tiny i18n library for ES6 and React",
  "author": "Mikko Vänskä <mikkovanska.com@gmail.com>",
  "keywords": [
    "i18n",
    "l10n",
    "react",
    "string interpolation"
  ],
  "main": "./lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vanska/pikku-i18n.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.3",
    "@testing-library/react": "^9.3.2",
    "@types/jest": "^24.0.22",
    "@types/node": "^14.14.12",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-watch": "^7.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2",
    "yalc-watch": "0.0.6"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint": "eslint . --ext .ts",
    "lint-watch": "esw --clear --watch \"src/**/*.ts\" \"src/**/*.tsx\"",
    "yalc-watch": "yalc-watch",
    "test": "jest",
    "jest-watch": "npm run test -- --watch",
    "build": "tsc",
    "tsc-watch": "tsc --watch --noEmit --project './tsconfig.json'",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "yalcWatch": {
    "watchFolder": "lib",
    "buildWatchCommand": "echo 'Watching for file changes in lib folder'",
    "extensions": "js"
  },
  "dependencies": {
    "glob": "^7.1.6",
    "log-beautify": "^1.2.0"
  }
}
